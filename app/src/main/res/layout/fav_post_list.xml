<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    android:clickable="true"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <TextView
            android:id="@+id/tvFavPostNum"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/esamanrumedium"
            android:text="번호"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/esamanrumedium"
            android:text="글 번호 :"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvFavWriter"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="36dp"
            android:fontFamily="@font/esamanrumedium"
            android:text="글쓴이 :"
            android:textSize="18dp"
            android:visibility="gone"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvFavPostTitle"
            android:layout_width="330dp"
            android:layout_height="32dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="33dp"
            android:layout_weight="1"
            android:fontFamily="@font/esamanrumedium"
            android:text="제목입니다"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvFavPostViewCount"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="68dp"
            android:layout_weight="1"
            android:fontFamily="@font/esamanrumedium"
            android:text="조회수"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvFavPostFavCount"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="68dp"
            android:layout_weight="1"
            android:fontFamily="@font/esamanrumedium"
            android:text="좋아요"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvFavPostRegdate"
            android:layout_width="220dp"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/esamanrumedium"
            android:text="작성일:"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
